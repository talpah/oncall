{% extends 'THLOnCallBundle::layout.html.twig' %}

{% block tagline -%}
    <h1>Actor list</h1>
{% endblock %}
{% block body -%}

    <table class="records_list">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Order_index</th>
            <th>Is_active</th>
            <th>Reference_date</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('actor_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.orderindex }}</td>
                <td>{{ entity.isactive }}</td>
                <td>{% if entity.referencedate %}{{ entity.referencedate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('actor_show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('actor_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('actor_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
